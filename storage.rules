rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Properties folder - allow all for now (change in production)
    match /properties/{allPaths=**} {
      allow read: if true;
      allow write: if true; // Temporarily allow all writes
    }
    
    // User uploads folder
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if true; // Temporarily allow all writes
    }
  }
}
